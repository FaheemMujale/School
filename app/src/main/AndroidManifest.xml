<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lead.infosystems.schooldiary">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="Facebook SDK"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Main.MainActivity"
            android:label="Home"
            android:launchMode="singleTop"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

            <meta-data
                android:name="android.app.default_searchable"
                android:value=".Profile" />
        </activity>
        <activity
            android:name=".Profile.Profile"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lead.infosystems.schooldiary.Main.MainActivity" />
        </activity>
        <activity
            android:name=".Login"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <service android:name=".CloudMessaging.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".CloudMessaging.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".Main.PostComments"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Main.Answer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Progress.GraphView"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Progress.Marks" />
        <activity
            android:name=".Progress.SinlGraph"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Attendance.Student_list" />
        <activity
            android:name=".Main.ChatNew"
            android:label="Contact"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".Profile" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lead.infosystems.schooldiary.Main.MainActivity" />
        </activity>
        <activity
            android:name=".Main.Chat"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.lead.infosystems.schooldiary.Main.ChatNew" />
        </activity>
        <activity android:name=".Attendance.Division" />
        <activity android:name=".MainSearch" />
        <activity android:name=".SchoolDiary.StudentDivision" />
        <activity android:name=".SchoolDiary.StudentSubject_list" />
        <activity android:name=".SchoolDiary.StudentDiary_DatePicker" />
        <activity android:name=".SchoolDiary.HomeworkList_teacher" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".Main.PhotoViewActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".ChangePassword"
            android:label="Change Password"></activity>
    </application>

</manifest>