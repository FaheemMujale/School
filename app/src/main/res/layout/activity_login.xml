<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lead.infosystems.schooldiary.Login"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/login_logo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text="Edupline"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="normal|bold"
        android:transitionName="@string/transition_name_login_logo"
        app:layout_constraintBottom_toTopOf="@+id/activity_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/activity_login"
        android:layout_below="@+id/login_logo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/pwd_by"
        android:layout_marginBottom="60dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/username"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:hint="Username"
            android:singleLine="false"
            app:layout_constraintHorizontal_bias="0.62"
            android:textAlignment="center"
            android:backgroundTint="@color/cardview_light_background"
            android:background="@color/cardview_light_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/password"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/cardview_light_background"
            android:background="@color/cardview_light_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/username"
            android:hint="Password"
            android:textAlignment="center" />

        <Button
            android:text="Login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="90dp"
            app:layout_constraintTop_toBottomOf="@+id/password"
            android:elevation="5dp"
            android:onClick="login_btn"
            android:textAllCaps="false"
            android:textStyle="normal|bold|italic"
            android:background="@color/backgroundSemiGray"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            android:textColor="@color/cardview_light_background"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>
    <TextView
        android:text="Powered By-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwd_by"
        android:textColor="@android:color/background_light"
        android:textStyle="normal|bold|italic"
        android:transitionName="@string/transition_name_login_name"
        android:layout_below="@+id/login_logo_name"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/lis_name"
        android:layout_marginBottom="4dp"
        android:textSize="10sp"
        android:layout_marginRight="70dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/lis_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwd_by"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="10sp"
        android:text="Imperium Inc"
        android:textAllCaps="true"
        android:textColor="@color/cardview_light_background"
        android:textSize="14sp"
        android:textStyle="normal|bold|italic"
        android:transitionName="@string/transition_name_login_pow"
        android:translationZ="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>