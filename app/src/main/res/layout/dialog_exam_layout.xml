<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/examName"
            android:hint="Exam Name"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="8dp"
            android:elevation="6dp"
            app:layout_constraintHorizontal_bias="0.81" />
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/examDate"
            android:hint="Exam Date"
            android:layout_below="@+id/examName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/examName"
            android:layout_marginTop="48dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Exam Description"
            android:id="@+id/examDescription"
            android:layout_above="@+id/button_upload"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/examDate"
            android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.0" />


        <EditText
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:hint="Name For PDF"
            android:id="@+id/examPDFName"
            android:layout_above="@+id/button_upload"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            app:layout_constraintTop_toBottomOf="@+id/examDescription"
            android:layout_marginTop="88dp"
            tools:layout_editor_absoluteX="16dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/upload_pdf"
            android:layout_centerHorizontal="true"
            android:id="@+id/uploadexam_pdf"
            android:layout_marginEnd="16dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/examDescription"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toRightOf="@+id/examPDFName"
            app:layout_constraintBottom_toTopOf="@+id/button_upload_exam"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintVertical_bias="0.25" />


        <Button
            android:text="Upload"
            android:textColor="@color/cardview_light_background"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_upload_exam"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/upload_pdf"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:backgroundTint="@color/colorMaroon"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/examPDFName" />
    </android.support.constraint.ConstraintLayout>
</RelativeLayout>