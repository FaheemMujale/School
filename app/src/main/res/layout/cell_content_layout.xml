<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingBottom="15dp">


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/circlecell_content"
            android:layout_alignParentStart="true" />
        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/subject_home_content"
            android:layout_marginLeft="70dp"
            />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_home_content"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/subject_home_content"
            android:layout_marginTop="20dp"
            />

        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_delete"-->
            <!--android:id="@+id/homework_delete_content"-->
            <!--android:background="@color/cardview_shadow_end_color"-->
            <!--android:visibility="gone"-->
            <!--android:layout_alignParentRight="true"-->
            <!--/>-->


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="@color/bgContent"
        android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/content_home"
                android:text="content"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/lastSubmission_date"
                android:text="submission date"
                android:layout_below="@+id/content_home"

                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/homework_date"
                android:text="homework date"
                android:layout_below="@+id/lastSubmission_date"

                 />
        <TextView
            android:id="@+id/content_request_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/btnRequest"
            android:padding="10dp"
            android:text="Delete"
            android:textAlignment="center"
            android:textColor="@color/mainTextColor"
            android:visibility="gone"
            android:textSize="20sp" />


    </LinearLayout>
    </LinearLayout>

