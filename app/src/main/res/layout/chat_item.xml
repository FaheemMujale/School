<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/card_rec"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="50dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="aa aa aa aa aa aa aa aa aa aa aa aaaa aaaaaaaaa a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/message_text_rcv"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:textStyle="normal|italic"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:text="a min ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_rcv"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/message_text_rcv"
                android:layout_marginEnd="2dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
                app:layout_constraintLeft_toLeftOf="@+id/message_text_rcv"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.92"
                android:textSize="8sp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_send"
        app:cardElevation="5dp"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="5dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="aa aa aa aa aa aa aa aa aa aa aa aaaa aaaaaaaaa a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/cardview_dark_background"
                android:id="@+id/message_text_snd"
                android:paddingRight="10dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.0"
                android:textStyle="normal|italic"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" />

            <TextView
                android:text="a min ago"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/time_snd"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/message_text_snd"
                android:layout_marginEnd="2dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="2dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="2dp"
                app:layout_constraintLeft_toLeftOf="@+id/message_text_snd"
                app:layout_constraintVertical_bias="1.0"
                app:layout_constraintHorizontal_bias="0.92"
                android:textSize="8sp" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>